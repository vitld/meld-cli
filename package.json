{
  "name": "@vitld/meld-cli",
  "version": "0.2.0",
  "description": "Agent-agnostic settings generator for AI coding agents",
  "type": "module",
  "bin": {
    "meld": "./dist/index.js"
  },
  "files": [
    "dist/",
    "meld.schema.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.4.1",
  "keywords": [
    "cli",
    "ai",
    "agent",
    "claude",
    "codex",
    "config",
    "gemini",
    "generator",
    "mcp",
    "multi-agent",
    "workspace"
  ],
  "license": "GPL-3.0-only",
  "author": "Viktor Pontinen",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitld/meld-cli.git"
  },
  "homepage": "https://github.com/vitld/meld-cli#readme",
  "bugs": {
    "url": "https://github.com/vitld/meld-cli/issues"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "commander": "^14.0.3",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.2.3",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
